# pyenv setup
export PYENV_ROOT="$HOME/.pyenv"
[[ -d $PYENV_ROOT/bin ]] && export PATH="$PYENV_ROOT/bin:$PATH"
eval "$(pyenv init -)"

DISABLE_AUTO_TITLE="true"

# Disable Oh My Zsh themes to prevent prompt setting
PROMPT=""
RPROMPT=""

# Path to your Oh My Zsh installation
export ZSH="$HOME/.oh-my-zsh"

# Theme
# ZSH_THEME="agnoster"

# Plugins
plugins=(git macos zsh-autosuggestions zsh-syntax-highlighting pyenv docker kubectl npm python pip virtualenv)

# Autosuggestions configuration
ZSH_AUTOSUGGEST_STRATEGY=(history completion)
ZSH_AUTOSUGGEST_HIGHLIGHT_STYLE='fg=#999'
autoload -Uz compinit
compinit

# Oh My Zsh
source $ZSH/oh-my-zsh.sh

# Completion settings
ENABLE_CORRECTION="true"
COMPLETION_WAITING_DOTS="true"

# User configuration
# Uncomment and modify these as needed
# export LANG=en_US.UTF-8
# export EDITOR='nvim'
# export ARCHFLAGS="-arch $(uname -m)"

# NVM (Node Version Manager)
export NVM_DIR="$HOME/.nvm"
[ -s "$NVM_DIR/nvm.sh" ] && \. "$NVM_DIR/nvm.sh"
[ -s "$NVM_DIR/bash_completion" ] && \. "$NVM_DIR/bash_completion"

# PostgreSQL
export PATH="/opt/homebrew/opt/postgresql@15/bin:$PATH"

# Bracketed paste
zstyle ':bracketed-paste-magic' active-widgets '.self-*'

# Aliases
# Add your aliases here, for example:
# alias zshconfig="mate ~/.zshrc"
# alias ohmyzsh="mate ~/.oh-my-zsh"

alias zshconfig="code ~/.zshrc"
alias ohmyzsh="code ~/.oh-my-zsh"
alias update="brew update && brew upgrade"
alias c="clear"
alias ll="ls -la"
alias python="python3"
alias pip="pip3"
alias gs="git status"
alias gc="git commit"
alias gp="git push"
alias dk="docker"
alias dkc="docker-compose"
alias ls="lsd"
alias cat="bat"


# Colorize ls output
export CLICOLOR=1
export LSCOLORS=ExFxBxDxCxegedabagacad


# Additional PATH modifications
# Add any other PATH modifications here, for example:
# export PATH=$HOME/bin:$HOME/.local/bin:/usr/local/bin:$PATH

# Starship prompt
eval "$(starship init zsh)"